<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alfray.flashlight"
    android:versionCode="103" android:versionName="1.0.3">
    <application
        android:label="@string/app_name"
        android:description="@string/description" android:icon="@drawable/bright_icon">
        <activity
            android:theme="@style/WhiteTheme"
            android:name="BrightlightActivity"
            android:taskAffinity="com.alfray.flashlight.Brightlight" android:icon="@drawable/bright_icon" android:label="Bright Flashlight">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="DarklightActivity"
            android:theme="@style/WhiteTheme"
            android:icon="@drawable/dark_icon" android:taskAffinity="com.alfray.flashlight.Darklight" android:label="Dark Flashlight">

        </activity>
    <activity android:label="About Bright Flashlight" android:name="AboutActivity" android:theme="@android:style/Theme.Dialog"></activity>
</application>
    <uses-sdk
        android:minSdkVersion="3" />
</manifest>