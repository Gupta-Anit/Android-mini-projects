<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.alfray.brighteriffic"
      android:versionName="1.0.1" android:versionCode="101">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".BrighterifficUI"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    <activity android:name="ChangeBrightnessActivity"
        android:taskAffinity="com.alfray.brighteriffic.Change"
        android:theme="@style/NoBackground">
        <intent-filter>
        <action android:name="com.alfray.brighteriffic.TOGGLE_BRIGHTNESS"></action>
        <category android:name="android.intent.category.DEFAULT"></category>
        </intent-filter>
        </activity>

</application>
    <uses-sdk android:minSdkVersion="2"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"></uses-permission>
<uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
<uses-permission android:name="android.permission.HARDWARE_TEST"></uses-permission>
</manifest>