<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.alfray.timeriffic" android:versionCode="42817" android:versionName="42.8.17">
    <application
        android:label="@string/app_name"
        android:name=".app.TA" android:icon="@drawable/app_icon">

        <receiver android:name=".app.UR">
        </receiver>

        <activity
            android:name=".prefs.PA"
            android:label="@string/prefs_title" />

        <activity
            android:name=".app.IA"
            android:label="@string/intro_title"
            android:theme="@android:style/Theme.Dialog" />

        <activity
            android:name=".profiles.PUI"
            android:label="@string/app_name" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".profiles.EPUI"
            android:label="@string/editprofile_title"
            android:theme="@android:style/Theme.Dialog" />

        <activity
            android:name=".actions.EAUI"
            android:label="@string/editaction_title" />

        <activity
            android:name=".utils.CBA"
            android:theme="@style/NoBackground"
            android:taskAffinity="com.alfray.timeriffic.Change"
            android:excludeFromRecents="true"/>

        <service android:name=".app.PSS"/>

        <activity android:theme="@android:style/Theme.Dialog"
             android:label="@string/errorreport_title"
             android:name=".error.ERUI"/>

        <service android:name=".app.US"></service>
    </application>

    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="3"/>

</manifest>
