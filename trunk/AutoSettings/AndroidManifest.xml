<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.alfray.timeriffic" android:versionName="0.04" android:versionCode="4">
    <application android:label="@string/app_name" android:icon="@drawable/timeriffic_icon" android:name="TimerifficApp">
        <activity android:label="@string/app_name" android:name="AutoUI">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    
<receiver android:name="AutoReceiver"><intent-filter><action android:name="android.intent.action.BOOT_COMPLETED"></action>
</intent-filter>
<intent-filter><action android:name="com.alfray.intent.action.AUTO_CHECK_STATE"></action>
</intent-filter>
</receiver>

<activity android:name="PrefsActivity" android:label="@string/prefs_title"></activity>

<activity android:name="IntroDialogActivity" android:label="@string/intro_title" android:theme="@android:style/Theme.Dialog"></activity>

</application>

<uses-sdk android:minSdkVersion="1"></uses-sdk>
<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"></uses-permission>

</manifest> 
