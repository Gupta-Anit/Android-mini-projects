<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:timeriffic="http://schemas.android.com/apk/res/com.alfray.timeriffic"
    >

    <item android:state_active="false"
          android:drawable="@drawable/globaltoggle_disabled"
    />

    <item android:state_active="true"
          timeriffic:state_gt_no_anim="true"
          android:drawable="@drawable/globaltoggle_anim_no"
    />

    <item android:state_active="true"
          timeriffic:state_gt_slow_anim="true"
          android:drawable="@drawable/globaltoggle_anim_slow"
    />

    <!-- timeriffic:state_gt_fast_anim="true" is the default -->
    <item android:state_active="true"
          android:drawable="@drawable/globaltoggle_anim_fast"
    />
</selector>
