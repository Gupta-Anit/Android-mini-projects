<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- custom states for the custom GlobalToggle view/foreground selector. -->
    <declare-styleable name="GlobalToggleState">
        <!-- State indicating to use the no-anim foreground. -->
        <attr name="state_gt_no_anim" format="boolean" />
        <!-- State indicating to use the slow anim foreground. -->
        <attr name="state_gt_slow_anim" format="boolean" />
        <!-- State indicating to use the fast anim foreground. -->
        <attr name="state_gt_fast_anim" format="boolean" />
    </declare-styleable>

</resources>
