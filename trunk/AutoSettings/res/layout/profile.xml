<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout 
	   android:layout_height="wrap_content"
	   android:id="@+id/headerLinear" 
	   android:background="?profileHeaderBackground"
	   android:layout_width="fill_parent"
	   >
        <CheckBox 
            android:text="Profile Name" 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:id="@+id/profileName"
			android:layout_weight="1" 
			android:paddingRight="5dip" 
			android:paddingLeft="5dip" 
			android:textAppearance="?profileHeaderTextStyle"
			/>
        <ImageButton
            android:src="@drawable/menu_indicator" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:id="@+id/profileButton"
            android:layout_weight="0"
            android:paddingRight="5dip" 
            />
    

    </LinearLayout>

	<LinearLayout 
        android:layout_height="wrap_content"
		android:id="@+id/settingsLinear" 
		android:orientation="vertical"
		android:layout_width="fill_parent"
		>
	    
		<TextView 
            android:text="Settings Line" 
            android:id="@+id/TextView01"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:paddingLeft="20sp" 
			android:textAppearance="?profileSettingTextStyle"
			android:drawableLeft="@drawable/green_dot" 
			android:paddingTop="5dip" 
			android:paddingBottom="5dip"
			/>
		<ImageView 
            android:id="@+id/separator"
			android:layout_height="wrap_content" 
			android:src="@drawable/divider_horizontal_dark"
			android:layout_width="fill_parent"
			/>

	</LinearLayout>


<CheckBox android:text="CheckBox01" android:id="@+id/CheckBox01" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
</LinearLayout>
