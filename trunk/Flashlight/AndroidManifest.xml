<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alfray.flashlight"
    android:versionCode="101"
    android:versionName="1.0.1"
>
    <application
        android:label="@string/app_name"
        android:icon="@drawable/icon"
    >
        <activity
            android:theme="@style/WhiteTheme"
            android:name="BrightlightActivity"
            android:label="Brightlight" android:taskAffinity="com.alfray.flashlight.Brightlight">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="DarklightActivity"
            android:label="Darklight"
            android:theme="@style/WhiteTheme"
            android:icon="@drawable/dark_icon" android:taskAffinity="com.alfray.flashlight.Darklight">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-sdk
        android:minSdkVersion="3" />
</manifest>