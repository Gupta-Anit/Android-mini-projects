<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scroller"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:scrollY="0dip">

<LinearLayout
    android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>

    <!-- Time Section -->
	<TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:text="@string/editaction_section_time_and_day"
        style="@style/SectionHeader"
		/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/action_buttons_bg_gradient"
        >

    	<TimePicker
    	    android:id="@+id/timePicker"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_gravity="center_horizontal"
    		/>

    	<TableLayout
    		android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    		android:layout_gravity="center_horizontal"
    		>
    	<TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    	    >
            <TextView
                android:id="@+id/testDayMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Mon"
                />
            <TextView
                android:id="@+id/testDayTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Tue"
                />
            <TextView
                android:id="@+id/testDayWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Wed"
                />
            <TextView
                android:id="@+id/testDayThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Thu"
                />
            <TextView
                android:id="@+id/testDayFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Fri"
                />
            <TextView
                android:id="@+id/testDaySat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Sat"
                />
            <TextView
                android:id="@+id/testDaySun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Sun"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		>
            <CheckBox
                android:id="@+id/dayMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                />
            <CheckBox
                android:id="@+id/dayTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                />
            <CheckBox
                android:id="@+id/dayWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                />
            <CheckBox
                android:id="@+id/dayThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                />
            <CheckBox
                android:id="@+id/dayFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                />
            <CheckBox
                android:id="@+id/daySat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                />
            <CheckBox
                android:id="@+id/daySun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                />
        </TableRow>
        </TableLayout>

    </LinearLayout>

    <!-- Action Section -->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/editaction_section_action"
        style="@style/SectionHeader"
        />

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@drawable/action_buttons_bg_gradient"
        >
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/editaction_ringer"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/editaction_vibrate"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/editaction_volume"
            />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <Button
            android:id="@+id/ringerModeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="- -"
            style="@style/ActionButton"
            />
        <Button
            android:id="@+id/ringerVibButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="- -"
            style="@style/ActionButton"
            />
        <Button
            android:id="@+id/ringerVolButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="- -"
            style="@style/ActionButton"
            />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/editaction_brightness"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/editaction_wifi"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/editaction_airplane"
            />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <Button
            android:id="@+id/brightnessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="- -"
            style="@style/ActionButton"
            />
        <Button
            android:id="@+id/wifiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="- -"
            style="@style/ActionButton"
            />
        <Button
            android:id="@+id/airplaneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="- -"
            style="@style/ActionButton"
            />
    </TableRow>
    </TableLayout>

</LinearLayout>
</ScrollView>
